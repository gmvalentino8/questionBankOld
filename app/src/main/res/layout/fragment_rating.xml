<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.valentino.questionbankfeature1.RatingFragment">

    <TextView
        android:id="@+id/Rating1Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Difficulty"
        android:textSize="32sp" />

    <RatingBar
        android:id="@+id/Rating1Bar"
        android:rating="0"
        android:stepSize="1"
        android:numStars="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Rating1Text"/>

    <TextView
        android:id="@+id/Rating2Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Relevance"
        android:textSize="32sp"
        android:layout_below="@id/Rating1Bar"/>

    <RatingBar
        android:id="@+id/Rating2Bar"
        android:rating="0"
        android:stepSize="1"
        android:numStars="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Rating2Text"/>

    <TextView
        android:id="@+id/Rating3Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time Taken"
        android:textSize="32sp"
        android:layout_below="@id/Rating2Bar"/>

    <RatingBar
        android:id="@+id/Rating3Bar"
        android:rating="0"
        android:stepSize="1"
        android:numStars="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Rating3Text"/>

    <TextView
        android:id="@+id/Rating4Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confidence"
        android:textSize="32sp"
        android:layout_below="@id/Rating3Bar"/>

    <RatingBar
        android:id="@+id/Rating4Bar"
        android:rating="0"
        android:stepSize="1"
        android:numStars="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Rating4Text"/>

    <Button
        android:id="@+id/SubmitRatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
